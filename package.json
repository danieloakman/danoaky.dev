{
	"name": "danoaky.dev",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview --host",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"upgrade-interactive": "bunx npm-check-updates -i",
		"create-resume": "bun run scripts/create-resume.ts"
	},
	"engines": {
		"node": ">=22.0.0"
	},
	"dependencies": {
		"@danoaky/js-utils": "^0.29.2"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.2",
		"@lucide/svelte": "^0.561.0",
		"@skeletonlabs/skeleton": "^4.8.0",
		"@skeletonlabs/skeleton-svelte": "^4.8.0",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/enhanced-img": "^0.9.2",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.9",
		"@trivago/prettier-plugin-sort-imports": "^6.0.0",
		"@types/bun": "^1.3.4",
		"@types/node": "^25.0.2",
		"chokidar": "^5.0.0",
		"class-variance-authority": "^0.7.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"iteragain": "^4.1.6",
		"jsdom": "^27.3.0",
		"meow": "^14.0.0",
		"moderndash": "^4.0.0",
		"npm-check-updates": "^19.2.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
