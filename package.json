		"@skeletonlabs/skeleton-svelte": "^1.3.1",
		"@sveltejs/adapter-cloudflare": "^7.1.1",
		"@sveltejs/enhanced-img": "^0.7.0",
		"@sveltejs/kit": "^2.26.1",
		"@sveltejs/vite-plugin-svelte": "^6.1.0",
		"@tailwindcss/forms": "^0.5.10",
